<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PersonFragment">


    <ImageView
        android:layout_marginTop="30dp"
        android:id="@+id/imageView2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:background="#E8E6E6"

         />

    <EditText
        android:layout_below="@+id/imageView2"
        android:id="@+id/userNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#30535151"
        android:drawableLeft="@drawable/ic_baseline_person_black"
        android:drawablePadding="20dp"
        android:hint="username"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        />




    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userNameEditText"
        android:inputType="textPassword"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#30535151"
        android:drawableLeft="@drawable/ic_baseline_lock_black"
        android:drawablePadding="20dp"
        android:hint="password"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        />


    <Button
        android:id="@+id/updateBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordEditText"
        android:layout_marginTop="55dp"
        android:clickable="false"
        android:text="Update"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toBottomOf="@+id/passwordEditText" />

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/takePhotoBtn"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:backgroundTint="#000000"
        android:text="Logout"
        android:textColor="@color/white"

         />


    <Button
        android:id="@+id/loadPhotoBtn"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/updateBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#E8E6E6"
        android:text="Load photo"
        android:textColor="@color/black"

         />

    <Button
        android:id="@+id/takePhotoBtn"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/loadPhotoBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#E8E6E6"
        android:text="take  photo"
        android:textColor="@color/black"


        />



</RelativeLayout>